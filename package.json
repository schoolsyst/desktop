{
  "name": "schoolsyst-desktop",
  "version": "0.0.1",
  "description": "schoolsyst's desktop app, an Electron wrapper around schoolsyst/webapp",
  "main": "app.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=DEV electron .",
    "dev:watch": "cross-env NODE_ENV=DEV nodemon --config nodemon.config.json --exec 'electron .'",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "setup": "node setup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schoolsyst/desktop.git"
  },
  "keywords": [
    "Desktop",
    "app",
    "windows",
    "linux",
    "mac-os",
    "schoolsyst"
  ],
  "author": {"name": "Evann DREUMONT", "email": "evann.dreumont@gmail.com"},
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/schoolsyst/desktop/issues"
  },
  "homepage": "https://github.com/schoolsyst/desktop#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.0",
    "electron-builder": "^22.8.0",
    "electron-devtools-installer": "^3.1.1",
    "figlet": "^1.5.0",
    "inquirer": "^7.3.3",
    "nodemon": "^2.0.4"
  },
  "build": {
    "appId": "com.schoolsyst.desktop",
    "files": [
      "app.js",
      "src/**",
      "build/**",
      "electron/**",
      "express/**",
      "package.json",
      "webapp/dist/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/logo_schoolsyst.ico",
      "artifactName": "${productName}.${version}.${os}.${ext}"
    },
    "linux": {
      "target": ["appImage","pacman","deb","tar.gz"],
      "icon": "build/logo_schoolsyst.png",
      "artifactName": "${productName}.${version}.${os}.${ext}"
    },
    "publish": null
  }
}
